# ============================================
# Environment Variables Configuration Template
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git! (already in .gitignore)

# ============================================
# WiFi Configuration (for ESP8266 firmware)
# ============================================
WIFI_SSID='your_wifi_ssid'
WIFI_PASSWORD='your_wifi_password'

# ============================================
# MQTT Broker (shared by publish and subscribe)
# ============================================
MQTT_BROKER_HOST='your-broker.hivemq.cloud'
MQTT_BROKER_PORT='8883'
MQTT_TOPIC='sensors/your_device/data'

# ============================================
# MQTT PUBLISH Credentials (for ESP8266 firmware)
# ============================================
MQTT_PUBLISH_USERNAME='your_publish_user'
MQTT_PUBLISH_PASSWORD='your_publish_password'

# ============================================
# MQTT SUBSCRIBE Credentials (for Django server)
# ============================================
MQTT_USERNAME='your_subscribe_user'
MQTT_PASSWORD='your_subscribe_password'

# ============================================
# MongoDB Configuration
# ============================================
MONGO_URI='mongodb+srv://username:password@cluster.mongodb.net/'
MONGO_DB_NAME='your_database'
MONGO_COLLECTION='sensor_data'

# ============================================
# Django Configuration
# ============================================
# Generate a strong secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY='your-very-long-random-secret-key-here'
DEBUG='false'

# ============================================
# Timezone Configuration
# ============================================
LOCAL_TIMEZONE='Europe/Prague'

# ============================================
# Admin Panel Credentials
# ============================================
ADMIN_USERNAME='your_admin_username'
ADMIN_PASSWORD='your_strong_admin_password'
